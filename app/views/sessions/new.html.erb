<% content_for :app_head do %>
  <%= stylesheet_link_tag 'pc/sessions-bundle', media: 'all' %>
  <%= javascript_include_tag 'pc/sessions-bundle'%>
<% end %>
<div class="container login-panel">
    <div class="row">
        <div class="col-xs-2 col-sm-3 col-md-3 col-lg-4"></div>
        <div class="col-xs-8 col-sm-6 col-md-6 col-lg-4 login_info">
            <div class="row">
                <div class="col-xs-4 col-sm-4 col-md-4 col-log-4"></div>
                <%=image_tag 'logo.png', class:'col-xs-4 col-sm-4 col-md-4 col-log-4'%>
                <div class="col-xs-4 col-sm-4 col-md-4 col-log-4"></div>
            </div>
            <div class="row">
                <p >海淀区园林绿地智能监管系统</p>
            </div>
            <div class="row warning_div" id="warning_div">                
                <div class="col-xs-1 col-sm-2 col-md-2 col-log-2"></div>
                <div class="col-xs-10 col-sm-8 col-md-8 col-log-8 warning_msg">
                    <div class="warning_text"><span class=" glyphicon glyphicon-exclamation-sign warning_img" aria-hidden="true"></span>用户名或密码错误</div>
                </div>
                <div class="col-xs-1 col-sm-2 col-md-2 col-log-2"></div>
            </div>
            <form>
                <div class="row">                
                    <div class="col-xs-1 col-sm-2 col-md-2 col-log-2"></div>
                    <div class="input-group input_group col-xs-10 col-sm-8 col-md-8 col-log-8">
                        <span class="glyphicon glyphicon-lock login_left input-group-addon" aria-hidden="true"></span>
                        <input type="text" name="mobile" id="mobile" class="form-control login_right " placeholder="请输入手机号" aria-describedby="basic-addon1">
                    </div>
                    <div class="col-xs-1 col-sm-2 col-md-2 col-log-2"></div>
                </div>
                <div class="row">                
                    <div class="col-xs-1 col-sm-2 col-md-2 col-log-2"></div>
                    <div class="input-group input_group col-xs-10 col-sm-8 col-md-8 col-log-8 ">
                        <span class="glyphicon glyphicon-lock login_left input-group-addon" aria-hidden="true"></span>
                        <input type="password" name="password" id="pwd"  class="form-control login_right"  placeholder="请输入密码" aria-describedby="basic-addon1">
                    </div>
                    <div class="col-xs-1 col-sm-2 col-md-2 col-log-2"></div>
                </div>
                <div class="row ">                
                    <div class="col-xs-1 col-sm-2 col-md-2 col-log-2"></div>
                    <div class="col-xs-10 col-sm-8 col-md-8 col-log-8 div_button">
                        <button class="btn login_button" id="login-btn" type="button">登录</button>
                    </div>
                </div>
                <div class="row ">                
                    <div class="col-xs-1 col-sm-2 col-md-2 col-log-2"></div>
                    <div class="col-xs-10 col-sm-8 col-md-8 col-log-8">
                        <a href="#" class="miss_password">忘记密码</a>
                    </div>
                    <div class="col-xs-1 col-sm-2 col-md-2 col-log-2"></div>
                </div>
            </form>
        </div>
        <div class="col-xs-2 col-sm-3 col-md-3 col-lg-4"></div>
    </div>
</div> 
